{
  "name": "phonebook-backend",
  "version": "0.0.1",
  "description": "backend for the phonebook app",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development nodemon index.js",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand --detectOpenHandles",
    "build:ui": "rm -rf build && cd ../../../Full Stack/part 2/phonebook-new && npm run build --prod && cp -r build ../../../part 3phonebook backend/",
    "deploy": "git push heroku main",
    "deploy:full": "npm run build:ui && git add . && git commit -m uibuild && npm run deploy",
    "logs:prod": "heroku logs --tail",
    "lint": "eslint ."
  },
  "author": "Bob Russell",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "json-server": "^0.16.3",
    "mongodb": "^3.6.3",
    "mongoose": "^5.11.15",
    "mongoose-unique-validator": "^2.0.3",
    "morgan": "^1.10.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "^4.0.2",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.2",
    "supertest": "^6.1.3"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
